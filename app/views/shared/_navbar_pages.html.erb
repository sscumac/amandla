<div class="navbar navbar-expand-sm navbar-light navbar-amandla">
  <div class="container px-3">

    <div class="nav-back">
      <% if controller_name == "visits" && action_name == "index" %>
        <%=  link_to account_path do %>
        <i class="fas fa-times"></i>
        <% end %>
      <% elsif controller_name == "questions" && action_name == "index" %>
        <%=  link_to account_path do %>
        <i class="fas fa-times"></i>
        <% end %>
      <% else %>
        <%=  link_to :back do %>
        <i class="fas fa-times"></i>
        <% end %>
      <% end %>
    </div>
    <div class="nav-title"><%= title %></div>
    <div class="nav-empty"></div>
  </div>
</div>

<!-- a conditional if title is set then don't do the regular navbar but the special title and if logo is true also show the amandla logo -->
