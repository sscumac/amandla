<div class="search-bar">
  <%= form_tag places_path , method: :get do %>  <%# form goes has default method "Post", thats why you must spcifiy "get" (Post redirects to Create) %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Filter by location" %>
    <%= button_tag(type: "submit", class: "btn-search") do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>

