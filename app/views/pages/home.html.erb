<div class="home-wrapper">
    <% if current_user %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
    <% else  %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <% end %>
    <div class="home-content">
      <div class="logo-home">
        <img src="https://res.cloudinary.com/dpnjiruwh/image/upload/v1607942783/Amandla_logo_oqhbdp.png" alt="Amandla" width="300px">
      </div>
      <div class="home-text-icon">
        <h2 class="h2-home">Help create the<br>change</h2>
        <i class="fas fa-globe-americas"></i>
        <h5 class="h5-home">SUPPORT BUSINESSES THAT ARE ALIGNED WITH YOUR BELIEFS.</h5>

        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
              <div class="search-section">
                <%= link_to "SEARCH AROUND YOU", "#", id: "my_location", class: "btn-location-home" %>
                <div class="search-bar">
                  <%= form_tag places_path, method: :get do %>
                    <input type="text" id="place_location" name="place[location]" class="form-control" placeholder="...or search by location"  >
                    <%= button_tag(type: "submit", class: "btn-search-home") do %>
                      <i class="fas fa-map-marker-alt"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

